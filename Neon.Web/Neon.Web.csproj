<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <Target Name="RunWebpack" AfterTargets="Build">
    <Exec Command="npm run build" />
  </Target>

  <ItemGroup>
    <Content Remove="wwwroot\html\svg\request-type\duel.html" />
    <Content Remove="wwwroot\html\svg\request-type\friend.html" />
    <Content Remove="wwwroot\html\svg\request-type\trade.html" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Remove="wwwroot\ts\modules\resources\lobby-resource.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\ts\modules\resources\lobby-resource.ts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2024.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.8" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.5.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="WebMarkupMin.AspNetCore8" Version="2.17.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Neon.Infrastructure\Neon.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Resource.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resource.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Resource.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Resource.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Logs\" />
    <Folder Include="wwwroot\js\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Views\Lobby\Svg\RequestType\Duel.cshtml" />
    <None Include="Views\Lobby\Svg\RequestType\Friend.cshtml" />
    <None Include="Views\Lobby\Svg\RequestType\Trade.cshtml" />
    <None Include="wwwroot\html\svg\request-type\duel.html" />
    <None Include="wwwroot\html\svg\request-type\friend.html" />
    <None Include="wwwroot\html\svg\request-type\trade.html" />
  </ItemGroup>

</Project>
